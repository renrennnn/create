  </div>
  <div class="button-parent">
    <%= link_to "Festivals Search", live_info_bands_path, class:'live-button-left' %>
    <%= link_to "Band Information", band_info_bands_path, class:'live-button-right' %>
  </div>
  <div class="about">
  </div>
</body>
<script>
// 画像の切り替え間隔（ミリ秒）
const interval = 3000;
// 画像のリスト
const images = [
  'live.png',
  'live2.png',
  'live3.png'
];
// 現在の画像のインデックス
let currentIndex = 0;
// スライドショーの要素を取得
const slideshow = document.querySelector('.slideshow');
// 画像要素を作成してスライドショーに追加
images.forEach(image => {
  const slide = document.createElement('img');
  slide.src = image;
  slide.classList.add('slide');
  slideshow.appendChild(slide);
});
// 画像を切り替える関数
function changeImage() {
  // 現在のスライドを非表示にする
  const currentSlide = slideshow.querySelector('.slide.active');
  currentSlide.classList.remove('active');
  // 次の画像のインデックスを計算
  currentIndex = (currentIndex + 1) % images.length;
  // 次のスライドを表示する
  const nextSlide = slideshow.querySelectorAll('.slide')[currentIndex];
  nextSlide.classList.add('active');
  // 一定時間ごとに画像を切り替える
  setTimeout(changeImage, interval);
}
// 初回の画像切り替えを開始
slideshow.querySelector('.slide').classList.add('active');
setTimeout(changeImage, interval);
</script>

